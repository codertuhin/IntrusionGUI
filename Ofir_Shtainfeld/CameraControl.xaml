                        <Separator Grid.Row="1"/>
                        <ListBox Grid.Row="2" Foreground="White">
                            <ListBoxItem>Most Recent Status 1</ListBoxItem>
                            <ListBoxItem>Most Recent Status 1</ListBoxItem>
                            <ListBoxItem>Most Recent Status 1</ListBoxItem>
                            <ListBoxItem>Oldest Status 1</ListBoxItem>
                            <ListBoxItem>Oldest Status 1</ListBoxItem>
                            <ListBoxItem>Oldest Status 1</ListBoxItem>
